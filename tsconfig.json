{
    "compilerOptions": {
        "plugins": [
            { "name": "tslint-language-service" }
        ],
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "outDir": "build",
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ]
}